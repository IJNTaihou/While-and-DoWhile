//Estructuras de control repetitivas.Ejercicio c
#include <iostream>
#include <conio.h>

using namespace std;

int main()
{
	//ENTRADA
	int n;
	int x;
	int y = 1, z = 1;
	int suma = 0;

	//LOGICA Y SALIDA
	cout << "Ingrese el valor de n:" << endl;
	cin >> n;
	cout << "Ingrese el valor de x:" << endl;
	cin >> x;

	if (n > 0 && x > 0)
	{
		while (z <= n)
		{
			suma = suma + (x * y);
			y = 2 * z;
			z++;
		}

		cout << "La suma es: " << suma << endl;
	}

	_getch();
}
