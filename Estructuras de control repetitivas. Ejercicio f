//Estructuras de control repetitivas.Ejercicio f
#include <iostream>
#include "conio.h"

using namespace std;

int main()
{
	//ENTRADA
	int n;
	float i;
	float x = 1, y = 1;
	float suma = 0;

	//LOGICA Y SALIDA
	cout << "Ingrese el valor de n:" << endl;
	cin >> n;
	cout << "Ingrese el valor de i:" << endl;
	cin >> i;

	if (n > 0 && i > 0)
	{
		while (y <= n)
		{
			suma = suma + 1 / (i * x);
			x = 3 * y;
			y++;
		}

		cout << "La suma es: " << suma << endl;
	}


	_getch();
}

