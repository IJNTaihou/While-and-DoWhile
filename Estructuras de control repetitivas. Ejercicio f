//Estructuras de control repetitivas.Ejercicio f
#include <iostream>
#include "conio.h"

using namespace std;

int main()
{
	//ENTRADA
	int n;
	float i;
	float b = 1, c = 1;
	float suma = 0;

	//LOGICA Y SALIDA
	cout << "Ingrese el valor de n:" << endl;
	cin >> n;
	cout << "Ingrese el valor de i:" << endl;
	cin >> i;

	if (n > 0 && i > 0)
	{
		while (c <= n)
		{
			suma = suma + 1 / (i * b);
			b = 3 * c;
			c++;
		}

		cout << "La suma es: " << suma << endl;
	}


	_getch();
}

